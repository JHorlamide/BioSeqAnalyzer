generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  AUTHOR
  MEMBER
}

model User {
  id                        String    @id @default(uuid())
  fullName                  String?
  email                     String    @unique
  password                  String
  role                      Role      @default(AUTHOR)
  resetToken                String?
  resetTokenExpiration      Int?
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
}